{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dev/static",
    "allowJs": false,
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "typeRoots": [
      "**/node_modules/@types",
    ],
    "paths": {
      "assets/*": [
        "dev/assets/ts/*"
      ],
    }
  },
  "include": [
    "dev/assets/**/*.ts",
    "dev/assets/**/*.d.ts",
  ],
  "exclude": [
    "**/node_modules/"
  ]
}